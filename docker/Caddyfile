{$DOMAIN} {
    reverse_proxy /grafana* grafana:3000
    reverse_proxy /prometheus* prometheus:9090
    reverse_proxy /n8n* n8n:5678
    reverse_proxy /metabase* metabase:3001
    reverse_proxy /ubuntu* ubuntu_server:22

    log {
        output file /var/log/caddy/access.log
        format console
    }
}

grafana.{$DOMAIN} {
    reverse_proxy grafana:3000
}

prometheus.{$DOMAIN} {
    reverse_proxy prometheus:9090
}

n8n.{$DOMAIN} {
    reverse_proxy n8n:5678
}

metabase.{$DOMAIN} {
    reverse_proxy metabase:3001
}
